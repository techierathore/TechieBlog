@page "/ui-modals"

<Heading Size="HeadingSize.Is3" Margin="Margin.Is3.FromBottom">Modals</Heading>

<Row>
    <Column ColumnSize="ColumnSize.Is12.Is6.OnWidescreen">
        <Card>
            <CardHeader>
                <CardTitle Size="5">Default modal</CardTitle>
                <CardSubtitle TextColor="TextColor.Muted">Default Bootstrap modal.</CardSubtitle>
            </CardHeader>
            <CardBody>
                Use Blazorise modal component to add dialogs to your site for lightboxes, user notifications, or completely custom content.
            </CardBody>
            <CardBody>
                <Button Color="Color.Primary" Clicked="@(()=>ShowModal(Color.Primary, true))">Primary</Button>
                <Button Color=" Color.Success" Clicked="@(()=>ShowModal(Color.Success, true))">Success</Button>
                <Button Color="Color.Danger" Clicked="@(()=>ShowModal(Color.Danger, true))">Danger</Button>
                <Button Color="Color.Warning" Clicked="@(()=>ShowModal(Color.Warning, true))">Warning</Button>
            </CardBody>
        </Card>
    </Column>
    <Column ColumnSize="ColumnSize.Is12.Is6.OnWidescreen">
        <Card>
            <CardHeader>
                <CardTitle Size="5">Colored modal</CardTitle>
                <CardSubtitle TextColor="TextColor.Muted">Colored Blazorise modal.</CardSubtitle>
            </CardHeader>
            <CardBody>
                Use Blazorise modal component to add dialogs to your site for lightboxes, user notifications, or completely custom content.
            </CardBody>
            <CardBody>
                <Button Color="Color.Primary" Clicked="@(()=>ShowModal(Color.Primary, true))">Primary</Button>
                <Button Color=" Color.Success" Clicked="@(()=>ShowModal(Color.Success, true))">Success</Button>
                <Button Color="Color.Danger" Clicked="@(()=>ShowModal(Color.Danger, true))">Danger</Button>
                <Button Color="Color.Warning" Clicked="@(()=>ShowModal(Color.Warning, true))">Warning</Button>
            </CardBody>
        </Card>
    </Column>
</Row>

<Row>
    <Column ColumnSize="ColumnSize.Is12.Is6.OnWidescreen">
        <Card>
            <CardHeader>
                <CardTitle Size="5">Centered modal</CardTitle>
                <CardSubtitle TextColor="TextColor.Muted">Vertically centered modal.</CardSubtitle>
            </CardHeader>
            <CardBody>
                Use Blazorise modal component to add dialogs to your site for lightboxes, user notifications, or completely custom content.
            </CardBody>
            <CardBody>
                <Button Color="Color.Primary" Clicked="@(()=>ShowModal(Color.Primary, true, false, true))">Primary</Button>
                <Button Color=" Color.Success" Clicked="@(()=>ShowModal(Color.Success, true, false, true))">Success</Button>
                <Button Color="Color.Danger" Clicked="@(()=>ShowModal(Color.Danger, true, false, true))">Danger</Button>
                <Button Color="Color.Warning" Clicked="@(()=>ShowModal(Color.Warning, true, false, true))">Warning</Button>
            </CardBody>
        </Card>
    </Column>
    <Column ColumnSize="ColumnSize.Is12.Is6.OnWidescreen">
        <Card>
            <CardHeader>
                <CardTitle Size="5">Modal sizes</CardTitle>
                <CardSubtitle TextColor="TextColor.Muted">These sizes kick in at certain breakpoints to avoid scrollbars on smaller viewports.</CardSubtitle>
            </CardHeader>
            <CardBody>
                Use Blazorise modal component to add dialogs to your site for lightboxes, user notifications, or completely custom content.
            </CardBody>
            <CardBody>
                <Button Color="Color.Primary" Clicked="@(()=>ShowModal(Color.Primary, true, false, false, ModalSize.Small))">Small</Button>
                <Button Color=" Color.Primary" Clicked="@(()=>ShowModal(Color.Primary, true, false, false, ModalSize.Large))">Large</Button>
                <Button Color="Color.Primary" Clicked="@(()=>ShowModal(Color.Primary, true, false, false, ModalSize.ExtraLarge))">Extra Large</Button>
            </CardBody>
        </Card>
    </Column>
</Row>

<Modal @ref="modalRef">
    <ModalContent Size="@modalSize" Centered="@centered">
        <ModalHeader>
            <ModalTitle>
                Modal
            </ModalTitle>
            <CloseButton />
        </ModalHeader>
        <ModalBody MaxHeight="@maxHeight">
            Use Blazorise modal component to add dialogs to your site for lightboxes, user notifications, or completely custom content.
        </ModalBody>
        <ModalFooter>
            <Button Color="Color.Secondary" Clicked="@HideModal">Close</Button>
            <Button Color="@color" Clicked="@HideModal">Save Changes</Button>
        </ModalFooter>
    </ModalContent>
</Modal>
@code {
    private Modal modalRef;
    private bool centered = false;
    private ModalSize modalSize = ModalSize.Default;
    private int? maxHeight = null;
    private Color color;

    private bool applyButtonColor;
    private bool applyBackgroundColor;

    private Task ShowModal( Color color, bool applyButtonColor = false, bool applyBackgroundColor = false, bool centered = false, ModalSize modalSize = ModalSize.Default )
    {
        this.color = color;
        this.centered = centered;
        this.applyButtonColor = applyButtonColor;
        this.applyBackgroundColor = applyBackgroundColor;
        this.centered = centered;
        this.modalSize = modalSize;

        return modalRef.Show();
    }

    private Task HideModal()
    {
        return modalRef.Hide();
    }
}