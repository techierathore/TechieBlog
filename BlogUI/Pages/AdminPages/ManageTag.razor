@page "/ManageTag"
@page "/ManageTag/{PageId:long}"
<ConentPanel PanelTitle=@PageHeader>
    <RightSesction></RightSesction>
    <PanelContent>
        <div class="col-12">
            @if (PageObj == null)
            {
                <p><em>Loading...</em></p>
            }
            else
            {
                <EditForm Model="@PageObj" OnValidSubmit="@SaveData">
                    <DataAnnotationsValidator />
                    <fieldset>
                        <CardBody>
                            <Fields>
                                <Validation Validator="@ValidationRule.IsNotEmpty">
                                    <Field Horizontal="true" ColumnSize="ColumnSize.Is6.OnDesktop">
                                        <FieldLabel ColumnSize="ColumnSize.Is12" Class="LabelDesign">Tag Name</FieldLabel>
                                        <FieldBody ColumnSize="ColumnSize.Is12">
                                            <input class="form-control" @bind="PageObj.TagName" placeholder="Tag Name" />
                                        </FieldBody>
                                    </Field>
                                </Validation>
                            </Fields>
                        </CardBody>
                    </fieldset>
                </EditForm>
            }

        </div>
        &nbsp;&nbsp;
        <button @onclick="SaveData" class="btn btn-primary">
            <span class="oi oi-plus" aria-hidden="true"></span> Save
        </button>
        &nbsp;&nbsp;
        <NavLink class="btn btn-primary" href="ExpCatList">
            <span class="oi oi-x" aria-hidden="true"></span>
            Close
        </NavLink>
    </PanelContent>
</ConentPanel>