@using BlogModels.Models
@inherits LayoutComponentBase
<Layout Sider="true">
    <Layout>
        <LayoutHeader Fixed="true">
            <Bar Class="navbar-expand" Breakpoint="Breakpoint.Desktop" Background="Background.Light" ThemeContrast="ThemeContrast.Light">
                <BarBrand>
                    <BarItem>
                        <BarLink To="">
                            <BarIcon IconName="IconName.Dashboard" />
                            BlazeStack
                        </BarLink>
                    </BarItem>
                </BarBrand>
                <BarMenu>
                    <BarEnd>
                        <Dropdown RightAligned>
                            <DropdownToggle Display="Display.InlineBlock.None.OnMobile">
                                <Image Class="avatar" Source="@SampleUsers.Avatar1.ProfileImagePath" Text="@SampleUsers.Avatar1.FullName" Fluid Border="Border.RoundedCircle" Margin="Margin.Is1.FromEnd" Style="width:40px; height:40px;" />
                                <Span TextColor="TextColor.Dark">@SampleUsers.Avatar1.FullName</Span>
                                </DropdownToggle>
                                <DropdownMenu>
                                    <DropdownItem>
                                        <Icon Name="IconName.User" />
                                        Profile
                                    </DropdownItem>
                                    <DropdownItem>
                                        <Icon Name="IconName.ChartPie" />
                                        Analytics
                                    </DropdownItem>
                                    <DropdownDivider />
                                    <DropdownItem>Settings &amp; Privacy</DropdownItem>
                                    <DropdownItem>Help</DropdownItem>
                                    <DropdownItem>Sign out</DropdownItem>
                                </DropdownMenu>
                            </Dropdown>
                        </BarEnd>
                    </BarMenu>
            </Bar>
            </LayoutHeader>
            <LayoutContent>
                <Div Class="content">
                    <Container Fluid="true" Padding="Padding.Is0">
                        @Body
                </Container>
            </Div>
        </LayoutContent>
    </Layout>
</Layout>
